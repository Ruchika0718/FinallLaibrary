@model FinallLaibrary.Models.tblAdmin
@{
    ViewBag.Title = "Login"; 
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin Login</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/fontawesome-all.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <script src="~/Scripts/modernizr-2.8.3.js"></script>

</head>
<body style="padding:unset">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
    <div>
        <br />
        <br />
        <h2  style="margin-left:650px;"> Admin Login</h2>
        <div class="col-md-4 offset-sm-4 mt-5 mb-5">
            <div class="card">
                <div class="card-header">Login</div>
                <div class="card-body offset-sm-1">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <form class="container-fluid">
                        <div class="form-group">
                            @Html.LabelFor(model => model.AdminEmail, htmlAttributes: new { @class = "" })
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-user"></i>
                                </span>
                                @Html.EditorFor(model => model.AdminEmail, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter the email" } })
                            </div>
                            @Html.ValidationMessageFor(model => model.AdminEmail, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.AdminPass, htmlAttributes: new { @class = "" })
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-unlock"></i>
                                </span>
                                @Html.EditorFor(model => model.AdminPass, new { htmlAttributes = new { @class = "form-control ", placeholder = "Enter the password", type = "password", id = "myInput" } })
                                <div class="input-group-append">
                                    <span class="input-group-text" style="height:40px" ;>
                                        <input type="checkbox" onclick="myFunction()">
                                    </span>
                                </div>
                            </div>
                            @Html.ValidationMessageFor(model => model.AdminPass, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <p class="text-danger">@ViewBag.Message</p>
                        </div>
                    </form>
                </div>
                <div class="card-footer">
                    <div class="col-10 offset-1">
                        <button type="submit" value="Login" class="btn btn-sm btn-block btn-success">
                            <i class="fas fa-sign-in-alt"></i>
                            Login
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
 }
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
  @*Show password*@
    <script>
        function myFunction() {
            var x = document.getElementById("myInput");
            if (x.type === "password") {
                x.type = "text";
            } else {
                x.type = "password";
            }
        }
    </script>
</body>
</html>
